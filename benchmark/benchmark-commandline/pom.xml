                                    <!--<exclude>org.processmining:prom5-plugins:jar:${prom.version}</exclude>-->
                                <!--</excludes>-->
                            <!--</artifactSet>-->
                            <filters>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/*.SF</exclude>
                                        <exclude>META-INF/*.DSA</exclude>
                                        <exclude>META-INF/*.RSA</exclude>
                                        <exclude>**/*.html</exclude>
                                        <exclude>**/*.java</exclude>
                                        <exclude>**/*.svn-base</exclude>
                                        <exclude>**/*.gif</exclude>
                                        <exclude>**/*.css</exclude>
                                        <exclude>**/*.png</exclude>
                                        <exclude>**/*.pdf</exclude>
                                        <exclude>**/*.project</exclude>
                                        <exclude>**/.svn/**</exclude>
                                    </excludes>
                                </filter>
                                <!--<filter>-->
                                    <!--<artifact>org.processmining:prom5</artifact>-->
                                    <!--<excludes>-->
                                        <!--<exclude>org/processmining/**</exclude>-->
                                    <!--</excludes>-->
                                <!--</filter>-->
                                <!--<filter>-->
                                    <!--<artifact>org.processmining:prom5-framework</artifact>-->
                                    <!--<excludes>-->
                                        <!--<exclude>org/processmining/**</exclude>-->
                                    <!--</excludes>-->
                                    <!--<includes>-->
                                        <!--<include>org/processmining/framework/log/AuditTrailEntry</include>-->
                                        <!--<include>org/processmining/framework/log/LogReader</include>-->
                                        <!--<include>org/processmining/mining/logabstraction/LogAbstraction</include>-->
                                        <!--<include>org/processmining/mining/logabstraction/LogRelations</include>-->
                                    <!--</includes>-->
                                <!--</filter>-->
                                <!--<filter>-->
                                    <!--<artifact>org.processmining:prom5-models</artifact>-->
                                    <!--<excludes>-->
                                        <!--<exclude>org/processmining/**</exclude>-->
                                        <!--<exclude>att/grappa/**</exclude>-->
                                    <!--</excludes>-->
                                <!--</filter>-->
                                <filter>
                                    <artifact>org.processmining:prom5-plugins</artifact>
                                    <excludes>
                                        <!--<exclude>org/processmining/**</exclude>-->
                                        <exclude>LogReaderTest</exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <artifact>com.raffaeleconforti:measurements</artifact>
                                    <includes>
                                        <include>com/raffaeleconforti/**</include>
                                    </includes>
                                </filter>
                                <filter>
                                    <artifact>com.raffaeleconforti:modified-miners</artifact>
                                    <includes>
                                        <include>com/raffaeleconforti/**</include>
                                    </includes>
                                </filter>
                                <filter>
                                    <artifact>com.raffaeleconforti:wrappers</artifact>
                                    <includes>
                                        <include>com/raffaeleconforti/**</include>
                                    </includes>
                                </filter>
                                <filter>
